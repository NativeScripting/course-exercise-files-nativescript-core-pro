<Page class="page"
    navigatingTo="onNavigatingTo"
    actionBarHidden="true"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <GridLayout rows="auto, *" ios:class="auth-container top-safe-full-screen-margin" android:class="auth-container pull-up">

        <StackLayout row="0" class="logo-container">
            <Image src="res://rpslogo" stretch="aspectFit"></Image>
        </StackLayout>

        <StackLayout row="1" visibility="{{ !loggingIn ? 'visible' : 'collapsed' }}">
            <GridLayout rows="50, *, auto" class="login-page-wrapper">
                <Label class="title" row="0" text="Login"/>
                <StackLayout row="1">
                    <StackLayout>

                        <StackLayout class="input-field with-validation">
                            <GridLayout columns="*, 25" class="login-field-wrapper">
                                <TextField col="0"
                                    text="{{ email }}"
                                    class="login-field valid" 
                                    hint="Email" keyboardType="email"/>
                            </GridLayout>

                            <StackLayout class="login-field-validation-wrapper">
                                <Label 
                                    visibility="collapsed" 
                                    text="email is missing" 
                                    class="validation"/>
                                <Label 
                                    visibility="collapsed" 
                                    text="the email is not in the correct format"
                                    class="validation"/>
                            </StackLayout>
                        </StackLayout>

                        <StackLayout class="input-field with-validation">
                            <GridLayout columns="*, 25" class="login-field-wrapper">
                                <TextField col="0"
                                    text="{{ password }}"
                                    class="login-field valid"
                                    hint="Password" secure="true"/>
                            </GridLayout>

                            <StackLayout>
                                <StackLayout>
                                    <Label visibility="collapsed"
                                        text="password is required" class="validation"/>
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>

                        <Button text="Login" tap="onLoginTap"/>

                        <Label class="hr"/>

                    </StackLayout>
                </StackLayout>
                <StackLayout row="2" class="bottom-safe-nav">
                    <Label text="Need an account?" class="smaller"/>
                    <Label tap="onGotoRegisterTap"
                        textTransform="uppercase" 
                        class="text-center m-20" 
                        color="white" text="Register"/>
                </StackLayout>
            </GridLayout>
        </StackLayout>

        <ActivityIndicator 
            row="1" 
            busy="{{ loggingIn }}" 
            color="#ffffff"  />

    </GridLayout>

</Page>
